                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="pencatatan.html">
                        <i class="bi bi-clipboard2-x pr-2"></i><span class="d-none d-sm-inline ms-2">Pencatatan</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="perolehan.html">
                        <i class="bi bi-inbox pr-2"></i><span class="d-none d-sm-inline ms-2">Perolehan</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="#">
                        <i class="bi bi-clock-history pr-2"></i><span class="d-none d-sm-inline ms-2">Riwayat</span>
                    </a>
                </nav>

            </div>
            <!-- sidebar end -->

            <div class="col col-sm-9 col-xl-10 p-0 m-0">
                <!-- navbar top start -->
                <nav class="navbar navbar-expand-lg navbar-light bg-light ">
                    <div class="container-fluid d-flex justify-content-end p-0">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-arrow-bar-right pr-2"></i>Logout</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <!-- navbar top start -->

                <!-- header main start -->
                <div class="container d-sm-flex align-items-center justify-content-between my-3">
                    <p class="h2">Merk</p>
                    <button type="button" class="btn btn-sm btn-dark" data-toggle="modal" data-target="#exampleModal1">
                        Tambah Merk
                    </button>
                </div>
                <!-- header main end -->

                <!-- main content start-->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Merk</th>
                                <th>Nama</th>
                                <th>Tanggal Buat</th>
                                <th>Terakhir Update</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item) => { %>
                                <tr>
                                    <td><%= item.idMerk %></td>
                                    <td><%= item.nama %></td>
                                    <td><%= item.tglBuat %></td>
                                    <td><%= item.tglUpdate %></td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-warning btnEdit" data-nama="<%= item.nama %>" data-id="<%= item.idMerk %>" data-toggle="modal" data-target="#exampleModal2">
                                            Edit
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger btnHapus" data-id="<%= item.idMerk %>" data-toggle="modal" data-target="#exampleModal3">
                                            Hapus
                                        </button>
                                    </td>
                                </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                </div>
                <!-- main content end-->

                <!-- Modal 1-->
                    <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header bg-dark text-white">
                              <h5 class="modal-title" id="exampleModalLabel1">Tambah Pencatatan</h5>
                              <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <form>
                                  <div class="form-group">
                                    <label for="namaMerk">Nama</label>
                                    <input type="text" class="form-control" id="namaMerk" placeholder="EPSON"> 
                                  </div>
                                <button type="button" id="btnTambah" class="btn btn-block btn-dark">Tambah Merk</button>
                              </form>
                            </div>
                          </div>
                        </div>
                    </div>

                <!-- Modal 2-->
                    <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header bg-dark text-white">
                              <h5 class="modal-title" id="exampleModalLabel2">Edit Merk</h5>
                              <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <form>
                                  <div class="form-group">
                                    <label for="merkEdit">Nama Merk</label>
                                    <input type="text" class="form-control" id="merkEdit" > 
                                  </div>
                                <button type="button" class="btn btn-block btn-warning" id="editButton">Edit Merk</button>
                              </form>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>

                 <!-- Modal 3-->
                <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmDeleteModalLabel">Konfirmasi Hapus</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Apakah anda yakin ingin menghapus data ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tidak</button>
                                <button type="button" class="btn btn-danger" id="hapusBtn">Ya</button>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="util.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', (event)=>{
        const btnTambah = document.getElementById("btnTambah");
        const namaMerk = document.getElementById("namaMerk");
        let namaEdit = document.getElementById("merkEdit");
        const btnEdit = document.getElementById("editButton")
        const hapusBtn = document.getElementById("hapusBtn")
        let idMerk = '';

        document.querySelectorAll('.btnEdit').forEach(btn =>{
            btn.addEventListener('click', (e)=>{
                const nama = e.target.getAttribute('data-nama')
                idMerk = e.target.getAttribute('data-id')
                namaEdit.value = nama
            })
        })
        
        document.querySelectorAll('.btnHapus').forEach(btn =>{
            btn.addEventListener('click', (e)=>{
                idMerk = e.target.getAttribute('data-id')
            })
        })
        
        btnEdit.addEventListener('click', async()=>{
            const url = 'http://localhost:3333/updateMerk'
            try {
                const response = await fetch(url, {
                    method: 'PUT',
                    headers:{
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        "nama" : namaEdit.value,
                        "id" : idMerk
                    })
                })
                if(response.ok){
                    alert(`Berhasil Edit data '${idMerk}', '${namaEdit}'`)
                    window.location.href = '/merk'
                    
                }else{
                    alert(" Edit data")
                    window.location.href = '/merk'
                }
            } catch (e) {
                alert(e)
                window.location.href = '/merk'
            }
        })

        btnTambah.addEventListener('click', async () => {
            const url = 'http://localhost:3333/addMerk';
            if(namaMerk.value = ""){
                alert("Form Tidak boleh Kosong")
            }else{
                try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        "nama": namaMerk.value
                    })
                });
                
                if (response.ok) {
                    alert('Data berhasil ditambahkan');
                    window.location.href = '/merk'
                } else {
                    alert('Terjadi kesalahan. Silakan coba lagi.');
                }
            } catch (e) {
                alert(e);
            }
            }
        });
        
        hapusBtn.addEventListener('click', async ()=>{
            const url = `${window.urlApi}deleteMerk`
            try {
                const respone = await fetch(url, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'                    },
                    body: JSON.stringify({
                        "id" : idMerk
                    })
                })
                if (response.ok) {
                    alert('Berhasil Hapus data'); 
                    window.location.href = '/merk'; 
                } else { 
                    alert('Terjadi kesalahan. Silakan coba lagi.'); 
                    window.location.href = '/merk'; 
                }
            } catch (e) {
                alert(e);
                window.location.href = '/merk'
            }
        })
    })
    </script>
    
</body>

</html>