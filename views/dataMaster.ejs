<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sistem Aset</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>

    <div class="container-fluid">
        <div class="row" style="height: 100vh;">
            <!-- sidebar start -->
            <div class="col-2 col-sm-3 col-xl-2 bg-dark">
                <nav class="navbar bg-dark border-bottom border-white mb-3" data-bs-theme="dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <i class="bi bi-house-door"></i><span class="d-none d-sm-inline ms-2">Sistem Aset</span>
                        </a>
                    </div>
                </nav>

                <nav class="nav flex-column">
                    <a class="nav-link text-white" style="white-space: nowrap;" href="/">
                        <i class="bi bi-speedometer2"></i><span class="d-none d-sm-inline ms-2">Dashboard</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="/dataMaster">
                        <i class="bi bi-collection"></i><span class="d-none d-sm-inline ms-2">Data Master</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="#">
                        <i class="bi bi-inbox"></i><span class="d-none d-sm-inline ms-2">Barang Masuk</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="#">
                        <i class="bi bi-file-earmark-arrow-down"></i><span class="d-none d-sm-inline ms-2">Lembar
                            Permintaan</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="#">
                        <i class="bi bi-clipboard2-x"></i><span class="d-none d-sm-inline ms-2">Penghapusan</span>
                    </a>
                    <a class="nav-link text-white" style="white-space: nowrap;" href="#">
                        <i class="bi bi-clock-history"></i><span class="d-none d-sm-inline ms-2">Riwayat</span>
                    </a>
                </nav>

            </div>
            <!-- sidebar end -->

            <div class="col col-sm-9 col-xl-10 p-0 m-0">
                <!-- navbar top start -->
                <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3">
                    <div class="container-fluid">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="bi bi-arrow-bar-right me-2"></i>Logout</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <!-- navbar top start -->
                <div class="px-3">
                    <!-- header main start -->
                    <div class="container mt-3">
                        <p class="h2">Data Master</p>
                    </div>
                    <!-- header main end -->

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Kode</th>
                                    <th>Tipe</th>
                                    <th>Spesifikasi</th>
                                    <th>Deskripsi</th>
                                    <th>Actions</th> <!-- Added a header for the actions column -->
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach((item) => { %>
                                    <tr>
                                        <td><%= item.kode %></td>
                                        <td><%= item.tipe %></td>
                                        <td><%= item.spesifikasi %></td>
                                        <td><%= item.deskripsi %></td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-warning" data-toggle="modal" data-target="#exampleModal2">
                                                Edit
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- main content end-->
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>